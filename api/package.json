    "dev": "npx tsx watch -r tsconfig-paths/register src/server.ts",
    "port:public": "gh codespace ports visibility 4000:public",
    "build": "npx tsc",
    "start": "npx tsx -r tsconfig-paths/register dist/server.js",
    "prisma:setup": "npx prisma init --datasource-provider postgresql --output src/schema/generated/prisma",
    "prisma:merge": "npx prismerge -i src/prisma/prismerge.json",
    "prisma:migrate": "npx prisma migrate dev --schema=./src/prisma/schema/main.prisma",
    "prisma:generate": "prisma generate --schema=./src/prisma/schema/main.prisma",
    "prisma:pull": "npx prisma db pull --schema=./src/prisma/schema/main.prisma",
    "prisma:studio": "npx prisma studio --url=\"$DATABASE_URL\""
